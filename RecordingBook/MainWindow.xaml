<Window x:Class="RecordingBook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecordingBook"
        mc:Ignorable="d"
        Title="MainWindow" Height="768" Width="1366">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MaxWidth="450px"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border BorderThickness="0 0 0.5 0" BorderBrush="#363636">
        <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                <RowDefinition MaxHeight="50px"/>
                <RowDefinition MaxHeight="40px"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Background="AliceBlue">
                <Border Background="#E4E4E4"
                        MaxHeight="40"
                        Margin="5 0 5 0"
                        BorderBrush="#E4E4E4"
                        BorderThickness="2"
                        VerticalAlignment="Center"
                        CornerRadius="5">
                    <StackPanel x:Name="St" Margin="5,2,5,2"
                                Orientation="Horizontal"
                                Background="#E4E4E4">
                        <TextBox Background="#E4E4E4"
                            MinWidth="200"
                            MaxWidth="250"
                            BorderThickness="0"
                            Text="Search the record" 
                            Margin="5 0 0 0"
                            VerticalAlignment="Center"
                            FontSize="20"/>
                    </StackPanel>
                </Border>
            </Grid>

            <Grid Grid.Row="1" Background="DarkCyan">
                <DockPanel>
                    <Button Width="40" DockPanel.Dock="Right" BorderThickness="0">
                        <Button.Background>
                            <ImageBrush ImageSource="/Delete_480px.png"/>
                        </Button.Background>
                    </Button>
                    <Button Width="40" HorizontalAlignment="Right" BorderThickness="0">
                        <Button.Background>
                            <ImageBrush ImageSource="/add_144px.png"/>
                        </Button.Background>
                    </Button>
                </DockPanel>
            </Grid>
                <Grid Grid.Row="2" >
                    <ListBox Background="LightGray"></ListBox>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
