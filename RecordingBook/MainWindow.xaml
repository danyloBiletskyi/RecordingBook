<Window x:Class="RecordingBook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecordingBook"
        mc:Ignorable="d"
        Title="MainWindow" Height="768" Width="1366">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MaxWidth="450px"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border BorderThickness="0 0 0.5 0" BorderBrush="#363636">
        <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                <RowDefinition MaxHeight="50px"/>
                <RowDefinition MaxHeight="40px"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
                <Grid Grid.Row="0" Background="#89d6fb">
                    <Border Background="#d4f0fc"
                        MaxHeight="40"
                        Margin="5 0 5 0"
                        BorderBrush="#8DD8F6"
                        BorderThickness="2"
                        VerticalAlignment="Center"
                        CornerRadius="5" HorizontalAlignment="Center">
                    <DockPanel x:Name="St" Margin="5,2,5,2"
                                Background="#d4f0fc" HorizontalAlignment="Right">
                            <TextBox Background="#d4f0fc"
                            DockPanel.Dock="Left"
                            MinWidth="300"
                            MaxWidth="250"
                            BorderThickness="0"
                            Text="Search the record" 
                            Margin="5 0 5 0"
                            VerticalAlignment="Center"
                            FontSize="20" HorizontalAlignment="Left"/>
                            <Button Width="26.6px" HorizontalAlignment="Right" Margin="15 0 0 0" DockPanel.Dock="Right" BorderThickness="0">
                                <Button.Background>
                                    <ImageBrush ImageSource="/search_480px.png"/>
                                </Button.Background>
                            </Button>
                        </DockPanel>
                </Border>
            </Grid>

                <Grid Grid.Row="1" Background="#B3E5FC">
                <DockPanel>
                    <Button Width="40" DockPanel.Dock="Right" BorderThickness="0">
                        <Button.Background>
                            <ImageBrush ImageSource="/Delete_480px.png"/>
                        </Button.Background>
                    </Button>
                    <Button Width="40" HorizontalAlignment="Right" BorderThickness="0" Click="Button_Click">
                        <Button.Background>
                            <ImageBrush ImageSource="/add_144px.png"/>
                        </Button.Background>
                    </Button>
                </DockPanel>
            </Grid>
                <Grid Grid.Row="2" >
                    <ListBox Background="#E5F6FE" Name="recordList">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Height="100px">
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition MaxWidth="120px"/>
                                            <ColumnDefinition MaxWidth="120px"/>
                                            <ColumnDefinition MaxWidth="120px"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0" Margin="5 0 5 0">
                                            <TextBlock Text="{Binding SecondName}" FontSize="20"/>
                                        </Grid>
                                        <Grid Grid.Column="1" Margin="5 0 5 0">
                                            <TextBlock Text="{Binding FirstName}" FontSize="20"/>
                                        </Grid>
                                        <Grid Grid.Column="2" Margin="5 0 5 0">
                                            <TextBlock Text="{Binding LastName}" FontSize="20"/>
                                        </Grid>
                                    </Grid>
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition MaxWidth="200"/>
                                            <ColumnDefinition MaxWidth="200"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0" Width="170">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition MaxWidth="20px"/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="Вік: "/>
                                            <TextBlock Grid.Column="1" Text="{Binding Age}"/>
                                        </Grid>
                                        <Grid Grid.Column="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="Номер Телефону:"/>
                                            <TextBlock Grid.Column="1" Text="{Binding PhoneNumber}"/>
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
